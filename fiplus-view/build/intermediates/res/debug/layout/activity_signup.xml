<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter Name"
        android:ems="10"
        android:id="@+id/sign_up_name"
        android:layout_marginTop="126dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Enter Email"
        android:ems="10"
        android:id="@+id/sign_up_email"
        android:layout_alignBottom="@+id/sign_up_name"
        android:layout_alignStart="@+id/sign_up_name"
        android:layout_marginBottom="51dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Enter Password"
        android:ems="10"
        android:id="@+id/sign_up_password"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/sign_up_name"
        android:layout_alignStart="@+id/sign_up_name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:id="@+id/sign_up_button2"
        android:layout_below="@+id/sign_up_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />
</RelativeLayout><!-- From: file:/Users/jsfirme/AndroidStudioProjects/Fiplus/fiplus-view/src/main/res/layout/activity_signup.xml -->