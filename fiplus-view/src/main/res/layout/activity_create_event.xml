<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".CreateEventActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/createEventImageView" />

    <EditText
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_event_name"
        android:hint="@string/create_event_name_hint"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/createEventImageView"
        android:layout_toEndOf="@+id/createEventImageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:paddingTop="23dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_event_location"
        android:hint="@string/create_event_location_hint"
        android:layout_below="@+id/create_event_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/createEventImageView"
        android:layout_toEndOf="@+id/createEventImageView"
        android:layout_below="@+id/create_event_location"
        android:id="@+id/dateTimeLinearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/create_event_date_hint"
            android:onClick="showDatePickerDialog"
            android:id="@+id/create_event_date_button"
            android:clickable="true"
            android:enabled="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/create_event_time_hint"
            android:onClick="showTimePickerDialog"
            android:id="@+id/create_event_time_button"
            android:clickable="true"
            android:enabled="true" />

    </LinearLayout>

    <EditText
        android:paddingTop="23dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/create_event_number_of_people"
        android:hint="@string/create_event_number_of_people_hint"
        android:layout_below="@+id/dateTimeLinearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:paddingTop="23dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_event_check_in_question"
        android:hint="@string/create_event_check_in_question_hint"
        android:layout_below="@+id/create_event_number_of_people"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:paddingTop="23dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/create_event_description"
        android:gravity="start"
        android:hint="@string/create_event_description_hint"
        android:layout_below="@+id/create_event_check_in_question"
        android:layout_above="@+id/create_event_tags_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/create_event_tags_label"
        android:id="@+id/create_event_tags_label"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:paddingTop="23dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_event_tags"
        android:layout_toEndOf="@+id/create_event_tags_label"
        android:layout_alignRight="@+id/create_event_description"
        android:layout_alignEnd="@+id/create_event_description"
        android:layout_alignTop="@+id/create_event_tags_label"
        android:layout_toRightOf="@+id/create_event_tags_label" />

</RelativeLayout>
