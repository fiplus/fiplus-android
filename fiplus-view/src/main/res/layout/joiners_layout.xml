<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/joiner_layout"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/joiner_image"
        android:src="@mipmap/ic_configure"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/view_event_joiner"
        android:id="@+id/joiner_name"
        android:layout_margin="3dp"
        android:layout_marginBottom="@dimen/tags_padding"
        android:textSize="@dimen/joiners_text_size" />

</LinearLayout>
