<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Mainscreen">

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/recent_activities_tabs"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:clickable="true"
        android:textColor="#ff000000"
        android:textStyle="bold"
        app:pstsIndicatorColor="#FFF8A426"
        app:pstsUnderlineColor="#fff4a917"
        app:pstsShouldExpand="true"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/recent_activities_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recent_activities_tabs"
        tools:context=".RecentActivitiesActivity"
        android:background="@color/list_background"/>


</RelativeLayout>
